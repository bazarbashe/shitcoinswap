.container
  %h1.mt-5 Balance History
  %p Displaying your balance history for #{@asset.name} (#{@asset.symbol})
  .card
    .card-body
      = paginate @balance_adjustments, theme: 'twitter-bootstrap-4'
      %table.table.table-hover
        %thead
          %tr
            %th Date
            %th= t '.asset_4'
            %th= t '.change_type_1'
            %th= t '.memo_1'
            %th= t '.amount_3'
            %th{:colspan => "3"}
        %tbody
          - @balance_adjustments.each do |balance_adjustment|
            %tr
              %td= balance_adjustment.created_at
              %td= link_to(balance_adjustment.asset.name, balance_adjustment.asset)
              %td= link_to(balance_adjustment.change_type, balance_adjustment.change)
              %td= balance_adjustment.memo
              %td= balance_adjustment.amount
              %td= link_to (t '.check'), balance_adjustment.transaction_url, target: '_blank' if balance_adjustment.transaction_url
      = paginate @balance_adjustments, theme: 'twitter-bootstrap-4'