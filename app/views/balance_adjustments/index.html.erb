<p id="notice"><%= notice %></p>

<h1><%= t '.account_1' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.asset_4' %></th>
      <th><%= t '.change_type_1' %></th>
      <th><%= t '.memo_1' %></th>
      <th><%= t '.amount_3' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balance_adjustments.each do |balance_adjustment| %>
      <tr>
        <td><%= balance_adjustment.asset_id %></td>
        <td><%= balance_adjustment.change_type %></td>
        <td><%= balance_adjustment.memo %></td>
        <td><%= balance_adjustment.amount %></td>
        <td><%= link_to (t '.check'), balance_adjustment.transaction_url, target: '_blank' if balance_adjustment.transaction_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>
