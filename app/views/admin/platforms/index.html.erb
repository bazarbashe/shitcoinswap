<h1><%= t '.admin' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.platform' %></th>
      <th><%= t '.hot_wallet' %></th>
      <th><%= t '.last_scanned' %></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.name %></td>
        <td><%= platform.data['hot_wallet_address'] %></td>
        <td><%= platform.last_scanned_block %></td>
      </tr>
    <% end %>
  </tbody>
</table>
