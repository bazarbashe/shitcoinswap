= form_with(model: order, local: true) do |form|
  - if order.errors.any?
    #error_explanation
      %h2= t '.prohibited_3', :order_errors => (pluralize(order.errors.count, "error") )
      %ul
        - order.errors.full_messages.each do |message|
          %li= message
  = form.hidden_field :quote_asset_id, value: Asset.eth.id
  .field
    = form.label :side
    = form.select :side, [['Buy', 'buy'], ['Sell', 'sell']]
  .field
    = form.label :quantity
    = form.text_field :quantity
  .field
    = form.label :base_asset_id
    = form.select :base_asset_id, Asset.all.map { |asset| [asset.symbol, asset.id] }
  .field
    = form.label :kind
    = form.select :kind, [['Market', 'market'], ['Limit', 'limit']]
  .field
    = form.label :rate
    = form.text_field :rate
  .actions
    = form.submit
