.container
  %h1.mt-5= t "Orders"
  .card
    .card-header Open Orders
    .card-body
      %table.table
        %thead
          %tr
            %th Side
            %th Asset
            %th Market
            %th= t '.quantity'
            %th= t '.rate'
            %th= t '.filled'
            %th
        %tbody
          - @open_orders.each do |order|
            %tr
              %td= order.side
              %td= link_to order.base_asset.name, order.base_asset
              %td= order.quote_asset.name
              %td
                - if order.buy_market?
                  #{order.total} #{order.quote_asset.symbol}
                - else
                  #{order.quantity} #{order.base_asset.symbol}
              %td= order.market? ? 'any' : order.rate
              %td
                = order.percent_filled
                \%
              %td
                = link_to (t '.cancel'), order, method: 'delete'
  .card.mt-3
    .card-header Closed Orders
    .card-body
      %table.table
        %thead
          %tr
            %th Side
            %th Asset
            %th Market
            %th= t '.quantity'
            %th= t '.rate'
            %th= t '.filled'
            %th
        %tbody
          - @past_orders.each do |order|
            %tr
              %td= order.side
              %td= link_to order.base_asset.name, order.base_asset
              %td= order.quote_asset.name
              %td
                - if order.buy_market?
                  #{order.total} #{order.quote_asset.symbol}
                - else
                  #{order.quantity} #{order.base_asset.symbol}
              %td= order.market? ? 'any' : order.rate
              %td
                = order.percent_filled
                \%
              %td
